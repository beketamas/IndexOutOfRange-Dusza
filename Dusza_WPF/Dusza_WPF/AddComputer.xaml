<Page x:Class="Dusza_WPF.AddComputer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dusza_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddComputer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--#region -->
        <Label Content="Számítógép Neve:"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontSize="25"></Label>

        <Label Content="Millimag:"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontSize="25"
               Grid.Row="1">
            
        </Label>

        <Label Content="Memória:"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontSize="25"
               Grid.Row="2">
            
        </Label>
<!--#endregion-->

        
        <!--#region -->
        <TextBox Grid.Column="1"
                 Grid.Row="0"
                 Height="80"
                 Width="350"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="25"
                 x:Name="tbPcName">
            
        </TextBox>

        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 Height="80"
                 Width="350"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="25"
                 x:Name="tbMillimag">

        </TextBox>

        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Height="80"
                 Width="350"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="25"
                 x:Name="tbMemoria">

        </TextBox>
        
        <!--#endregion-->
        
        <Button Grid.Row="4" Grid.ColumnSpan="2"
                Width="180"
                Height="50"
                Content="Gép Hozzáadása"
                x:Name="btnPcAdd"
                FontSize="20"
                Style="{DynamicResource GeneralButton}"></Button>
    </Grid>
</Page>
