<Page x:Class="Dusza_WPF.ManageApplications"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dusza_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageApplications">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Klaszter Programok"
               FontSize="25"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center">
            
        </Label>
        <Label Grid.Row="0"
               Grid.Column="1"
               Content="Programpéldányok"
               FontSize="25"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center">
        </Label>

        <ListBox Grid.Row="1"
                 x:Name="lbKlaszterProgramok"
                 Background="Gray"
                 FontSize="20" 
                 SelectionChanged="lbKlaszterProgramok_SelectionChanged"
                 HorizontalContentAlignment="Center">
            
        </ListBox>
        <ListBox Grid.Row="1"
                 Grid.Column="1"
                 x:Name="lbProgrampeldanyok"
                 Background="Gray"
                 FontSize="20" 
                 SelectionChanged="lbProgrampeldanyok_SelectionChanged"
                 HorizontalContentAlignment="Center">

        </ListBox>
        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="150"
                Height="50"
                FontSize="18"
                Content="Program Leállíása"
                HorizontalAlignment="Left"
                Margin="20 0 0 0"
                x:Name="btnProgramLeallitas"
                IsEnabled="False">
        </Button>

        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="180"
                Height="50"
                FontSize="18"
                Content="Program Szerkeztése"
                HorizontalAlignment="Center"
                x:Name="btnProgramSzerkeztese" 
                IsEnabled="False">
        </Button>

        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="150"
                Height="50"
                FontSize="18"
                Content="Példány Leállítása"
                Margin="0 0 20 0"
                HorizontalAlignment="Right"
                x:Name="btnPeldanyLeallitasa"
                IsEnabled="False">
        </Button>
    </Grid>
</Page>
