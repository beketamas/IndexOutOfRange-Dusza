<Page x:Class="Dusza_WPF.ManageApplications"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dusza_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="575" d:DesignWidth="1000"
      Title="ManageApplications">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Klaszter Programok"
               FontSize="25"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               Width="250"
               HorizontalAlignment="Left"
               Margin="20 0 0 0">

        </Label>
        <Label Grid.Row="0"
               Grid.Column="1"
               Content="Programpéldányok"
               FontSize="25"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               HorizontalAlignment="Right"
               Margin="0 0 20 0"
               Width="250">
        </Label>

        <Label Grid.Row="0"
               FontSize="20"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               Width="480"
               Height="50"
               Foreground="Red"
               x:Name="lblError"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center">
            
        </Label>

        <ListBox Grid.Row="1"
                 x:Name="lbKlaszterProgramok"
                 Background="Gray"
                 FontSize="20" 
                 SelectionChanged="lbKlaszterProgramok_SelectionChanged"
                 HorizontalContentAlignment="Center">
        </ListBox>
        <ListBox Grid.Row="1"
                 Grid.Column="1"
                 x:Name="lbProgrampeldanyok"
                 Background="Gray"
                 FontSize="20" 
                 SelectionChanged="lbProgrampeldanyok_SelectionChanged"
                 HorizontalContentAlignment="Center">

        </ListBox>
        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="170"
                Height="50"
                FontSize="18"
                Content="Program Leállíása"
                HorizontalAlignment="Left"
                Margin="0, 0,0, 0"
                x:Name="btnProgramLeallitas"
                IsEnabled="False"
                Style="{DynamicResource GeneralButton}">
                
        </Button>

        <Button Grid.Row="2"
                Width="185"
                Height="50"
                FontSize="18"
                Content="Program Szerkeztése"
                HorizontalAlignment="Left"
                x:Name="btnProgramSzerkeztese" 
                IsEnabled="False" Margin="270,0,0,0"
                Style="{DynamicResource GeneralButton}"/>

        <Button Grid.Row="2"
        Width="205"
        Height="50"
        FontSize="18"
        Content="Programok Szétosztása"
        HorizontalAlignment="Left"
        x:Name="btnProgramokSzetosztasa" 
        IsEnabled="True" Grid.Column="1"
        Margin="40,0,0,0" 
        Click="btnProgramokSzetosztasa_Click"
        Style="{DynamicResource GeneralButton}"/>

        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="160"
                Height="50"
                FontSize="18"
                Content="Példány Leállítása"
                Margin="0 0 20 0"
                HorizontalAlignment="Right"
                x:Name="btnPeldanyLeallitasa"
                IsEnabled="False"
                Style="{DynamicResource GeneralButton}">
        </Button>
    </Grid>
</Page>
