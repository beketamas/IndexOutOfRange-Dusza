<Window x:Class="Dusza_WPF.AddApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dusza_WPF"
        mc:Ignorable="d"
        Title="AddApplication" Height="450" Width="400">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Label Content="Név:"
            Grid.Row="0"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        </Label>

        <Label Content="Millimag:"
            Grid.Row="1"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

        </Label>

        <Label Content="Memória:"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20">

        </Label>

        <Label Content="Aktív:"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20">

        </Label>
        <Button Width="100"
             Height="50"
             Content="Létrehozás"
             Grid.Row="4"
             Grid.ColumnSpan="2"
             x:Name="btnLetrehoz">

        </Button>

        <TextBox Grid.Column="1"
              Grid.Row="0"
              Width="150"
              Height="30"
              FontSize="20"
              VerticalContentAlignment="Center"
              HorizontalContentAlignment="Center"
              x:Name="tbNév">

        </TextBox>

        <TextBox Grid.Column="1"
              Grid.Row="1"
              Width="150"
              Height="30"
              FontSize="20"
              VerticalContentAlignment="Center"
              HorizontalContentAlignment="Center"
              x:Name="tbMillimag" PreviewTextInput="TextInput">

        </TextBox>
        <TextBox Grid.Row="2"
              Grid.Column="1"
              Width="150"
              Height="30"
              FontSize="20"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
              x:Name="tbMemoria" PreviewTextInput="TextInput">

        </TextBox>
        <TextBox Grid.Row="3"
              Grid.Column="2"
              Width="150"
              Height="30"
              FontSize="20"
              VerticalContentAlignment="Center"
              HorizontalContentAlignment="Center"
              x:Name="tbMennyiAktiv"
              PreviewTextInput="TextInput">

        </TextBox>

    </Grid>
</Window>
