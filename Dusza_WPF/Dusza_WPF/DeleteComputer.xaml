<Page x:Class="Dusza_WPF.DeleteComputer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dusza_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteComputer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ListBox Background="Gray"
                 x:Name="lbComputers"
                 FontSize="20"
                 HorizontalContentAlignment="Center">

        </ListBox>
        <Button Width="200"
                Height="50"
                Style="{DynamicResource GeneralButton}"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Margin="50 0 0 0"
                x:Name="btnDeleteComputer"
                Content="Gép törlése"
                FontSize="20">
        </Button>

        <Button Width="250"
                Height="50"
                Style="{DynamicResource GeneralButton}"
                Grid.Row="1"
                HorizontalAlignment="Right"
                Margin="0 0 0 0"
                Content="Programok áthelyezése"
                FontSize="20"
                x:Name="btnReplaceApps">
        </Button>
        <Image Height="25"
               HorizontalAlignment="Left"
               Grid.Row="1">
            <Image.Source>
                <BitmapImage UriSource="pack://application:,,,/Dusza_WPF;component/Images/warning-sign.png"></BitmapImage>
            </Image.Source>
        </Image>
        <Label Grid.Row="1"
               Width="281"
               Height="50"
               HorizontalAlignment="Left"
               Content="=> Van a gépen futó program."
               VerticalContentAlignment="Center"
               FontSize="20" Margin="25,13,0,12">
        </Label>
    </Grid>
</Page>
