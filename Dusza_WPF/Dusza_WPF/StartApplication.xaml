<Page x:Class="Dusza_WPF.StartApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dusza_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartApplication">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.ColumnSpan="2"
               FontSize="20"
               Height="50"
               VerticalAlignment="Top"
               Foreground="Red"
               Content=""
               HorizontalContentAlignment="Center"
               x:Name="lblWarning">
            
        </Label>
        <Label Content="Választható Programok:"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               FontSize="25"
               Height="50"
               VerticalAlignment="Center"></Label>
        <ComboBox Grid.Row="0"
                   Grid.ColumnSpan="2"
                  Width="200"
                  Height="50"
                  Margin="0 10 0 0"
                  x:Name="cbValasztahtoProgramok"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  VerticalAlignment="Bottom"
                  FontSize="20" SelectionChanged="cbValasztahtoProgramok_SelectionChanged">
        </ComboBox>
        <Label Grid.Row="0"
               Width="250"
               Height="50"
               VerticalAlignment="Bottom"
               VerticalContentAlignment="Bottom"
               HorizontalContentAlignment="Center"
               HorizontalAlignment="Left"
               Margin="10 0 0 0"
               FontSize="20"
               x:Name="lblProgramMemoria">
            
        </Label>

        <Label Grid.Row="0"
               Grid.Column="1"
               Width="250"
               Height="50"
               VerticalAlignment="Bottom"
               VerticalContentAlignment="Bottom"
               HorizontalContentAlignment="Center"
               FontSize="20"
               x:Name="lblProgramMillimag"
               HorizontalAlignment="Right"
               Margin="0 0 10 0">

        </Label>

        <Label Content="Választható Gépek:"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               FontSize="25"
               Grid.Row="1"
               Height="50"
               VerticalAlignment="Center"></Label>
        <ComboBox Grid.Row="1"
                   Grid.ColumnSpan="2"
                  Width="200"
                  Height="50"
                  Margin="0 10 0 0"
                  x:Name="cbValasztahtoGepek"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  VerticalAlignment="Bottom"
                  FontSize="20" SelectionChanged="cbValasztahtoGepek_SelectionChanged">
        </ComboBox>

        <Label Grid.Row="1"
               Width="250"
               Height="50"
               VerticalAlignment="Bottom"
               VerticalContentAlignment="Bottom"
               HorizontalContentAlignment="Center"
               FontSize="20"
               x:Name="lblGepMemoria"
               HorizontalAlignment="Left"
               Margin="10 0 0 0">

        </Label>

        <Label Grid.Row="1"
               Grid.Column="1"
               Width="250"
               Height="50"
               VerticalAlignment="Bottom"
               VerticalContentAlignment="Bottom"
               HorizontalContentAlignment="Center"
               FontSize="20"
               x:Name="lblGepMillimag"
               HorizontalAlignment="Right"
               Margin="0 0 10 0">

        </Label>

        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="150"
                Height="60"
                Content="Start"
                FontSize="25"
                x:Name="btnStart"
                Style="{DynamicResource GeneralButton}">
        </Button>
    </Grid>
</Page>
