<Page x:Class="Dusza_WPF.StartApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dusza_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartApplication">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Választható Programok:"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               FontSize="25"></Label>
        <ComboBox Grid.Row="0"
                   Grid.ColumnSpan="2"
                  Width="200"
                  Height="50"
                  Margin="0 50 0 0"
                  x:Name="cbValasztahtoProgramok"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  FontSize="20">
        </ComboBox>

        <Label Content="Választható Gépek:"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               FontSize="25"
               Grid.Row="1"></Label>
        <ComboBox Grid.Row="1"
                   Grid.ColumnSpan="2"
                  Width="200"
                  Height="50"
                  Margin="0 50 0 0"
                  x:Name="cbValasztahtoGepek"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  FontSize="20">
        </ComboBox>

        <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="150"
                Height="60"
                Content="Start"
                FontSize="25"
                x:Name="btnStart">
        </Button>
    </Grid>
</Page>
